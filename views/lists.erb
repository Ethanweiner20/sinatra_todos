<% content_for :header_links do %>
  <a href="/lists/new" class="add">New List</a>
<% end %>
<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p>
          <%= remaining_todo_count(list) %> / <%= todo_count(list) %>
        </p>
      </a>
    </li>
  <% end %>
</ul>
