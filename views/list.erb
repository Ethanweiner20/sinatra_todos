<% content_for :header_links do %>
  <a href="/lists">All Lists</a>
<% end %>
<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <form action="/" method="post">
        <li><a class="edit" href="/lists/<%= params[:id] %>/edit">Edit List</a></li>
      </form>
    </ul>
  </form>
</header>
<ul>
  <% @list[:todos].each do |todo| %>
    <li>
      <form action="#" method="post" class="check">
        <input type="hidden" name="completed" value="<%= todo[:completed] %>">
        <button type="submit">Complete</button>
      </form>
      <h3><%= todo[:name] %></h3>
      <form action="#" method="post" class="delete">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
<form action="/lists/<%= params[:id] %>/todos" method="post">
  <dl>
    <dt><label for="todo-name">Enter a new todo item:</label></dt>
    <dd><input type="text" name="todo-name" id="todo-name" placeholder="Something to do" /></dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>
</section>
