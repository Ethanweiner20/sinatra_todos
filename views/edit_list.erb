<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <form action="/lists/<%= params[:id] %>/destroy" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
  <form action="/lists/<%= params[:id] %>" method="post">
    <dl>
      <dt><label for="list-name">Enter the new name for the list:</label></dt>
      <dd>
        <input type="text" name="list-name" id="list-name" placeholder="List Name"
      value="<%= params["list-name"] || @list[:name] %>" />
      </dd>
    </dl>
    <fieldset class="actions">
      <input type="submit" value="Save">
      <a href="/lists/<%= params[:id] %>">Cancel</a>
    </fieldset>
  </form>
</section>
